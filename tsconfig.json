{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "pretty": true,
    "jsx": "react",
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots" : [
      "./types/",
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "./dist/",
    "./examples/",
    "./node_modules/"
  ]
}
